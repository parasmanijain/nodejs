{
  "name": "nodejs",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && cp -r src/views dist/views && sass --no-source-map src/public/styles:dist/public/styles",
    "watch": "tsc --watch",
    "watch:sass": "sass --watch src/public/styles:dist/public/styles",
    "watch:views": "chokidar 'src/views/**/*' -c 'cp -r src/views dist/views'",
    "watch:public": "chokidar 'src/public/**/*' -c 'cp -r src/public dist/public'",
    "dev": "npm run build && concurrently \"npm:watch\" \"npm:watch:sass\" \"npm:watch:views\" \"npm:watch:public\" \"nodemon dist/app.js\"",
    "start": "cross-env NODE_ENV=production node dist/app.js"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.9.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "sass": "^1.93.2"
  }
}
